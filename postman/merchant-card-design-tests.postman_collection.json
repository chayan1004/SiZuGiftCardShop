          "raw": "{\n  \"designImageBase64\": \"data:image/png;base64,\" + \"A\".repeat(5000000),\n  \"themeColor\": \"#ef4444\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/merchant/card-design",
          "host": ["{{baseUrl}}"],
          "path": ["api", "merchant", "card-design"]
        }
      }
